{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
<h2>Campaign list</h2>

<div class="col-75">
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Banner</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('campaign_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="label">{{ entity.title }}</td>
                <td>{{ entity.slug }}</td>
                <td class="count">{{ entity.banners|length }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('campaign_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="col-25">
    <canvas id="chart"></canvas>
</div>

{% endblock %}
